{
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "nextjs",
  
  "build": {
    "env": {
      "NEXT_PUBLIC_APP_VERSION": "0.30.0"
    }
  },

  "functions": {
    "app/api/**/*": {
      "maxDuration": 60,
      "memory": 1024
    }
  },

  "crons": [
    {
      "path": "/api/cron/nightly-ingestion",
      "schedule": "0 3 * * *"
    }
  ],

  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=0, stale-while-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],

  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    }
  ],

  "rewrites": [
    {
      "source": "/healthz",
      "destination": "/api/health"
    }
  ]
}