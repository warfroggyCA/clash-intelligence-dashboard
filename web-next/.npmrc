# NPM Configuration - Speed up installs on Vercel

# Use faster algorithms
prefer-offline=true
fetch-retries=3
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Audit level (skip audits in CI for speed)
audit-level=high

# Reduce package lock updates
package-lock=true
save-exact=true

# Engine strict (ensures consistent builds)
engine-strict=true

# Logging
loglevel=error